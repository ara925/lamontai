{
  "name": "lamontai",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0 <23.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "prisma:push": "prisma db push",
    "build:simple": "next build --no-lint",
    "build:css": "tailwindcss -i ./src/app/globals.css -o ./dist.css",
    "copy:css": "node -e \"require('fs').copyFileSync('./dist.css', './public/dist.css')\"",
    "dev:css": "npm run build:css && npm run copy:css && next dev",
    "rebuild": "rm -rf node_modules/.cache && rm -rf .next && npm install && npx tailwindcss init -p && npm run build:css && npm run dev",
    "prepare:prod": "npm run build:css && npm run copy:css && next build",
    "cloudflare:prepare": "node scripts/prepare-cloudflare-db.js",
    "cloudflare:build": "node scripts/prepare-cloudflare-db.js && cross-env NODE_ENV=production cp .env.edge .env.local && next build",
    "cloudflare:init-db": "node scripts/init-cloudflare-db.js",
    "cloudflare:setup": "chmod +x setup-cloudflare-db.sh && ./setup-cloudflare-db.sh",
    "cloudflare:dev": "cross-env NEXT_PUBLIC_DEPLOY_ENV=cloudflare NEXT_PUBLIC_CLOUDFLARE_ENABLED=true next dev -p 3001",
    "cloudflare:test-edge": "cross-env NEXT_PUBLIC_DEPLOY_ENV=cloudflare NEXT_PUBLIC_CLOUDFLARE_ENABLED=true next build && next start -p 3001",
    "db:migrate": "npx prisma migrate dev",
    "db:push": "npx prisma db push",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "test:auth": "node --experimental-modules run-test.mjs",
    "test:e2e": "node --experimental-modules e2e-auth-test.mjs",
    "test:auth-debug": "node scripts/auth-test.js",
    "db:backup": "node src/lib/backup-scripts/db-backup.js",
    "db:restore": "node src/lib/backup-scripts/db-restore.js",
    "db:vacuum": "node src/lib/backup-scripts/database-vacuum.js",
    "monitor": "node src/lib/backup-scripts/system-monitor.js",
    "logs:rotate": "node src/lib/backup-scripts/logger-rotation.js",
    "setup:cron": "node src/lib/backup-scripts/setup-cron.js"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.1.0",
    "@headlessui/react": "^1.7.18",
    "@prisma/client": "^5.9.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "glob": "^10.3.10",
    "next": "14.1.3",
    "next-auth": "^4.24.5",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.0.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "overrides": {
    "are-we-there-yet": "^4.0.1", 
    "gauge": "^6.0.0",
    "npmlog": "^8.0.0"
  },
  "resolutions": {
    "are-we-there-yet": "^4.0.1",
    "gauge": "^6.0.0",
    "npmlog": "^8.0.0"
  }
}
